<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		     xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:views="using:MacroPad.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MacroPad.Views.MainSettings"
			 x:DataType="views:MainSettingsViewModel">

	<Design.DataContext>
		<views:MainSettingsViewModel/>
	</Design.DataContext>
	

	<Border Classes="card" Padding="4">
		<Grid RowDefinitions="36,*">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*" MaxWidth="320" MinWidth="192"/>
				<ColumnDefinition Width="4"/>
				<ColumnDefinition Width="4*"/>
			</Grid.ColumnDefinitions>
			<Button Command="{CompiledBinding Close}" VerticalAlignment="Top" >
				<TextBlock><InlineUIContainer>
					<ui:SymbolIcon Symbol="Back"/>
				</InlineUIContainer>
					Back
				</TextBlock>
			</Button>
			<Border Classes="card" Padding="4" Grid.Row="2">
				<ListBox Name="navBar" ItemsSource="{CompiledBinding SettingsCategories}" SelectedIndex="{CompiledBinding SelectedCat}">
					<ListBox.Styles>
						<Styles>
							<Style Selector="ListBoxItem">
								<Setter Property="Padding" Value="12 2 4 2"/>
								<Setter Property="Background" Value="{DynamicResource SubtleFillColorTertiaryBrush}"/>
								<Style Selector="^:selected">
									<Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter">
										<Setter Property="Background" Value="{DynamicResource ListViewItemBackgroundSelected}" />
									</Style>
								</Style>
							</Style>
						</Styles>
					</ListBox.Styles>
					<ListBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding}"/>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</Border>
			<ScrollViewer Grid.Column="2" Grid.RowSpan="2" Content="{CompiledBinding #navBar.SelectedItem}"/>
		</Grid>
	</Border>
</UserControl>
