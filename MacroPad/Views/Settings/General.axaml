<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="using:MacroPad.Views.Settings"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MacroPad.Views.Settings.General"
			 x:DataType="local:GeneralViewModel">
	
	<StackPanel Margin="8" MaxWidth="512" HorizontalAlignment="Left" Orientation="Vertical">
		<TextBlock Text="General" Classes="h4" FontWeight="SemiBold" Width="512" />
		<Border Classes="card" VerticalAlignment="Stretch" Margin="0,0,5,0">
			<StackPanel>
				<Grid RowDefinitions="*,*" ColumnDefinitions="*,Auto">
					<TextBlock>Run on system startup</TextBlock>
					<ToggleSwitch IsChecked="{CompiledBinding RunStartup}" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0 -13" OnContent="Yes" OffContent="No"/>
				</Grid>

				<Border Classes="card-separator" />

				<Grid RowDefinitions="*,*" ColumnDefinitions="*,Auto">
					<TextBlock>Minimize on startup</TextBlock>
					<ToggleSwitch IsChecked="{CompiledBinding RunMin}" IsEnabled="{CompiledBinding RunStartup}" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0 -13" OnContent="Yes" OffContent="No"/>
				</Grid>
			</StackPanel>
		</Border>
	</StackPanel>
</UserControl>
